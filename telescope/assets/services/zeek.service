[Unit]
After=network.target
 
[Service]
Restart=always
RestartSec=30
ExecStartPre=/bin/mkdir -p /var/spool/zeek/
ExecStart=/opt/zeek/bin/zeek -i eth0 -C LogAscii::use_json=T LDAP::default_log_search_attributes=T  Log::default_logdir=/var/spool/zeek
ExecStop=/bin/kill -s TERM $MAINPID
 
[Install]
WantedBy=multi-user.target
